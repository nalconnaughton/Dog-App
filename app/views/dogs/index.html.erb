<div class="container mt-4 d-flex justify-content-center">
<h1>Dog Adoption Profiles</h1>
</div>

<div class="container text-center">
<div class="row justify-content-center">
<div class="col-md-12">
  <table class="table align-middle table-hover table-bordered border-primary">
   <thead class="table-light" >
    <tr class="align-bottom" >
      <th class="align-top">Name</th>
      <th class="align-top">Breed</th>
      <th class="align-top">Age</th>
      <th class="align-top">Gender</th>
      <th class="align-top">Picture</th>
      <th class="align-top">Options</th>    
    </tr>
   </thead>
  <tbody>
    <% @dogs.each do |dog| %>
      <tr class="align-bottom">
        <td><%= dog.name %></td>
        <td><%= dog.breed %></td>
        <td><%= dog.age %></td>
        <td><%= dog.gender %></td>
        <td>
          <% if dog.picture.present? %>
            <%= image_tag dog.picture.url, class: 'img-thumbnail', size: '100x100' %>
          <% else %>
            No Image
          <% end %>
        </td>
        <td>
          <%= link_to 'Show', dog, class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_dog_path(dog), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Delete', dog, method: :delete, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>
<%= link_to 'Add New Dog', new_dog_path, class: 'btn btn-success mb-3' %>
     </div>
  </div>
</div>