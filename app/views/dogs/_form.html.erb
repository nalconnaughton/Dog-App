
<div class="container-sm">
<%= form_with(model: dog, local: true) do |form| %>

    <div class="form-group">
      <%= form.label :name, style: "display: block"%>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :breed, style: "display: block" %>
      <%= form.text_field :breed, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :age, style: "display: block" %>
      <%= form.number_field :age, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :gender,  style: "display: block" %>
      <%= form.text_field :gender, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :picture, style: "display: block" %>
      <%= form.file_field :picture, class: "form-control" %>
    </div>

    <br>

    <div>
    <%= link_to 'Back', dogs_path, class: 'btn btn-secondary' %>
    <%= form.submit class: "btn btn-primary btn-success" %>
    </div>
  <% end %>
  </div>
  